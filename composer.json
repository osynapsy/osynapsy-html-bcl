{
    "name": "osynapsy/osynapsy-html-bcl",
    "version": "0.1",
    "homepage": "http://www.osynapsy.net/html-bcl",
    "type": "library",
    "description": "Osynapsy bootstrap components library",
    "keywords": ["Osynapsy", "Components library"],
    "license": "MIT",
    "authors": [
        {
            "name": "Pietro Celeste",
            "email": "p.celeste@osynapsy.net",
            "homepage": "https://github.com/osynapsy/osynapsy-html-bcl/wiki"
        }
    ],
    "require": {
        "php" : ">=7.2.0",        
        "osynapsy/osynapsy-html2" : "@stable",
        "twbs/bootstrap" : "5.*"
    },
    "autoload" : {
        "psr-4": {
            "Osynapsy\\Bcl\\": "src/Osynapsy/Bcl/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "rm -rf public/bootstrap",
            "cp -R vendor/twbs/bootstrap/dist public/bootstrap"
        ]
    }
}
